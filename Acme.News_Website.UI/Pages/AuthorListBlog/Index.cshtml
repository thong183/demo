@page "{username}"
@model Acme.News_Website.UI.Pages.AuthorListBlog.IndexModel
@{
}
<h2>Tổng hợp bài viết của tác giả : @Model.Author.Name</h2>
<div class="row">
    <div class="mn-img col-md-3" style="position:sticky">
        <img src="@Model.Author.UserProfileImage" width="100%" height="255px" style="border-radius:50%" />
        <div class="mn-title" style="text-align:center">
            <h5>@Model.Author.Name</h5>
            <h7>@Model.Author.Position</h7>
        </div>
    </div>
    <div class="row col-md-9">
        @foreach (var blog in Model.listBlog)
        {
            <div class="col-md-4">
                <div class="mn-img">
                    <img src="@blog.ImageTitleId" width="248px" height="158px" />
                    <div class="mn-title">
                        <a href="@Model.getDetailUrl(blog.TitleUrl)">@blog.Title</a>
                    </div>
                </div>
            </div>
        }
    </div>
    
</div>

